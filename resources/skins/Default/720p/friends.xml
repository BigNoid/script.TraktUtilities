<window>
    <defaultcontrol always="true">101</defaultcontrol>
    
    <animation effect="fade" time="250">WindowOpen</animation>
    <animation effect="fade" time="250">WindowClose</animation>
    
    <controls>
        <control type="label" id="114">
            <description>Name of Friend</description>
            <posx>0</posx>
            <posy>30</posy>
            <width>1280</width>
            <height>80</height>
            <align>center</align>
            <font>font20</font>
            <textcolor>FFFFFFFF</textcolor>
            <shadowcolor>00000000</shadowcolor>
        </control>
        
        <control type="list" id="113">
            <description>List of Friends</description>
            <posx>50</posx>
            <posy>50</posy>
            <width>150</width>
            <height>600</height>
            <visible>true</visible>
            <orientation>vertical</orientation>
            <itemlayout width="100" height="100">
                <control type="image">
                    <posx>0</posx>
                    <posy>0</posy>
                    <width>100</width>
                    <height>100</height>
                    <info>ListItem.Icon</info>
                    <aspectratio>scale</aspectratio>
                </control>
            </itemlayout>
            <focusedlayout width="138" height="138">
                <control type="image">
                    <posx>0</posx>
                    <posy>0</posy>
                    <width>138</width>
                    <height>138</height>
                    <info>ListItem.Icon</info>
                    <aspectratio>scale</aspectratio>
                </control>
            </focusedlayout>
        </control>
        
        
    </controls>
</window>