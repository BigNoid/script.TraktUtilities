<window>
    <defaultcontrol always="true">101</defaultcontrol>
    
    <animation effect="fade" time="250">WindowOpen</animation>
    <animation effect="fade" time="250">WindowClose</animation>
    
    <controls>
        <control type="image" id="102">
            <description>Background</description>
            <posx>0</posx>
            <posy>0</posy>
            <width>1280</width>
            <height>800</height>
            <aspectratio>scale down</aspectratio>
        </control>

        <control type="label" id="103">
            <description>Movie Title</description>
            <posx>0</posx>
            <posy>30</posy>
            <width>1280</width>
            <height>80</height>
            <align>center</align>
            <font>font20</font>
            <textcolor>FFFFFFFF</textcolor>
        </control>

        <control type="label" id="109">
            <description>Movie Tagline</description>
            <posx>0</posx>
            <posy>50</posy>
            <width>1280</width>
            <height>80</height>
            <align>center</align>
            <font>font20</font>
            <textcolor>FFFFFFFF</textcolor>
        </control>

        <control type="textbox" id="104">
            <description>Movie Overview</description>
            <posx>30</posx>
            <posy>100</posy>
            <width>700</width>
            <height>300</height>
            <font>font13</font>
            <visible>true</visible>
            <autoscroll delay="3000" time="1000" repeat="10000">!Control.HasFocus(13)</autoscroll>
            <textcolor>FFFFFFFF</textcolor>
        </control>

        <control type="label" id="107">
            <description>Movie Year</description>
            <posx>50</posx>
            <posy>450</posy>
            <width>200</width>
            <height>40</height>
            <align>left</align>
            <font>font20</font>
            <textcolor>FFFFFFFF</textcolor>
            <label></label>
        </control>

        <control type="label" id="108">
            <description>Movie Runtime</description>
            <posx>50</posx>
            <posy>470</posy>
            <width>300</width>
            <height>40</height>
            <align>left</align>
            <font>font20</font>
            <textcolor>FFFFFFFF</textcolor>
            <label></label>
        </control>
        
        <control type="list" id="110">
            <description>List of Movies</description>
            <posx>20</posx>
            <posy>500</posy>
            <width>1240</width>
            <height>200</height>
            <onup>106</onup>
            <ondown>110</ondown>
            <visible>true</visible>
            <orientation>horizontal</orientation>
            <itemlayout width="110" height="150">
                <control type="image">
                    <posx>0</posx>
                    <posy>45</posy>
                    <width>100</width>
                    <height>150</height>
                    <info>ListItem.Icon</info>
                </control>
            </itemlayout>
            <focusedlayout width="140" height="195">
                <control type="image">
                    <posx>0</posx>
                    <posy>0</posy>
                    <width>130</width>
                    <height>195</height>
                    <info>ListItem.Icon</info>
                </control>
            </focusedlayout>
        </control>
        
        
    </controls>
</window>